<view class="pay_container"><view class="receive_address_wrap"><block wx:if="{{!address.userName}}"><view data-event-opts="{{[['tap',[['handleChooseAddress',['$event']]]]]}}" class="address_btn" bindtap="__e"><button type="primary" plain="{{true}}">获取收货地址</button></view></block><block wx:else><view class="address_detail"><view class="receiver_first_raw"><view class="receiver_name">{{"收货人："+address.userName}}</view><view class="reciver_phone">{{address.telNumber}}</view></view><view class="receiver_second_raw">{{address.totalAddress}}</view></view></block></view><view class="pay_list_container"><view class="pay_title">购物车</view><view class="pay_main"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="goods_id"><view class="pay_item"><view class="pay_goods_logo"><image src="{{item.goods_big_logo}}" mode="widthFix"></image></view><view class="pay_goods_info"><view class="goods_name">{{item.goods_name}}</view><view class="goods_handle_wrap"><view class="goods_price">{{"￥"+item.goods_price}}</view><view class="goods_calc_wrap"><view class="goods_calc_item goods_num">{{"X"+item.num}}</view></view></view></view></view></block></view></view><view class="footer_tool_container"><view class="total_price_wrap"><view class="total_price">合计：<text class="total_price_text">{{"￥"+totalPrice}}</text></view><view>包含运费</view></view><view data-event-opts="{{[['tap',[['handleOrderPay',['$event']]]]]}}" class="order_pay_wrap" bindtap="__e">{{"支付：("+totalNum+")"}}</view></view></view>