<view class="cart_container"><view class="receive_address_wrap"><block wx:if="{{!address.userName}}"><view data-event-opts="{{[['tap',[['handleChooseAddress',['$event']]]]]}}" class="address_btn" bindtap="__e"><button type="primary" plain="{{true}}">获取收货地址</button></view></block><block wx:else><view class="address_detail"><view class="receiver_first_raw"><view class="receiver_name">{{"收货人："+address.userName}}</view><view class="reciver_phone">{{address.telNumber}}</view></view><view class="receiver_second_raw">{{address.totalAddress}}</view></view></block></view><view class="cart_list_container"><view class="cart_title">购物车</view><view class="cart_main"><block wx:if="{{cartList.length}}"><view><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="goods_id"><view class="cart_item"><checkbox-group data-event-opts="{{[['change',[['handleItemChange',[index]]]]]}}" class="cart_checkbox_wrap" bindchange="__e"><checkbox checked="{{item.checked}}"></checkbox></checkbox-group><view class="cart_goods_logo"><image src="{{item.goods_big_logo}}" mode="widthFix"></image></view><view class="cart_goods_info"><view class="goods_name">{{item.goods_name}}</view><view class="goods_handle_wrap"><view class="goods_price">{{"￥"+item.goods_price}}</view><view class="goods_calc_wrap"><view data-event-opts="{{[['tap',[['handleItemNumEdit',[index,-1]]]]]}}" class="goods_calc_item btn_calc" bindtap="__e">-</view><view class="goods_calc_item goods_num">{{item.num}}</view><view data-event-opts="{{[['tap',[['handleItemNumEdit',[index,1]]]]]}}" class="goods_calc_item btn_calc" bindtap="__e">+</view></view></view></view></view></block></view></block><block wx:else><view>购物车空空如也~</view></block></view></view><view class="footer_tool_container"><view class="all_checked_wrap"><checkbox-group name data-event-opts="{{[['change',[['handleAllChecked',['$event']]]]]}}" bindchange="__e"><checkbox checked="{{allChecked}}">全选</checkbox></checkbox-group></view><view class="total_price_wrap"><view class="total_price">合计：<text class="total_price_text">{{"￥"+totalPrice}}</text></view><view>包含运费</view></view><view data-event-opts="{{[['tap',[['handlePay',['$event']]]]]}}" class="order_pay_wrap" bindtap="__e">{{"结算：("+totalNum+")"}}</view></view></view>